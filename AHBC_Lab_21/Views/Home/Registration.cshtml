@model AHBC_Lab_21.Models.Registration


@{
    ViewBag.Title = "Registration";
}


<h2>Registration</h2>
<h3>Please enter the following information to register:</h3>


<div>
    <form>

        <div class="form-group">
            <input type="text" name="FirstName" value="" placeholder="First Name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="text" name="LastName" value="" placeholder="Last Name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="email" name="Email" value="" placeholder="Email" class="form-control" />
        </div>
        <div class="form-group">
            <input type="tel" name="PhoneNumber" value="" placeholder="Phone Number" maxlength="10" class="form-control" />
        </div>
        <div class="form-group">
            <input type="password" name="Password" value="" placeholder="Password" maxlength="10" class="form-control" />
        </div>

        <button class="btn-default">Submit</button>

    </form>
</div>